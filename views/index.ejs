<div class="
  bg-stone-50
  p-2
  lg:grid lg:grid-cols-3 lg:grid-rows-2 lg:gap-2
  lg:col-start-2 lg:col-end-5
  md:flex md:flex-col

">
<h1 class="
  
  text-5xl
  font-medium
  flex flex-col text-center
  lg:col-start-1 lg:col-span-3 lg:row-start-1
  md:col-start-1 md:row-start-1 
">The Original 151 Pokemon</h1>
<p class="
	col-start-1
	col-span-3
	row-start-2
	font-normal
  text-blue-500
	flex flec-col justify-center
  space-x-8
	px-3
  my-2
	">
    <a href="/">Home </a> 
    <a href="/pokemon"> Favorites</a>
</p>

<% pokemon.forEach(function(pokemon) { %>
    <div class="
      flex flex-col justify-start
      md:px-3
      bg-amber-50 
      border-4 border-gray-100
    ">
	<h2 class="
		py-3
    text-xl
    "><a href="pokemon/<%=pokemon.name%>"><%= pokemon.name %></a></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button type="submit" class="
          text-white text-sm
          bg-blue-500 hover:bg-violet-600
          min-w-min 
          rounded-md
          p-2 
          mb-2
        ">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
