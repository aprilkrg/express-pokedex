<div class="
  bg-stone-50
  p-2
  col-start-2
  col-end-5
  grid grid-cols-3 grid-rows-2 gap-2
">
<h1 class="
	col-start-1
	col-span-3
	row-start-1
	justify-end
	text-5xl
	font-medium
	flex flec-col justify-center
	">The Original 151 Pokemon</h1>
<p class="
	col-start-1
	col-span-3
	row-start-2
	font-normal
  text-blue-500
	flex flec-col justify-center
  space-x-8
	px-3
  my-2
	">
    <a href="/">Home </a> 
    <a href="/pokemon"> Favorites</a>
</p>

<% pokemon.forEach(function(pokemon) { %>
    <div class="
	flex flex-col justify-start
  bg-amber-50 
  border-4 border-gray-100
    ">
	<h2 class="
		py-3
    text-xl
    "><a href="pokemon/<%=pokemon.name%>"><%= pokemon.name %></a></h2>
      <form method="POST" action="/pokemon">
        <input hidden type="text" name="name" value="<%= pokemon.name %>">
        <button type="submit" class="
          text-white text-sm
          bg-blue-500 hover:bg-violet-600
          min-w-min 
          rounded-md
          p-2 
          mb-2
        ">Add to Favorite Pokemon</button>
      </form>
    </div>
  <% }); %>
</div>
