<div class="container">
    <h1 class="text-center">The Original 151 Pokemon</h1>
    <p class="text-center">
        <a href="/">Home</a>
      <a href="/pokemon">Favorites</a>
    </p>
  
      <div class="well">
        <h2><a href="pokemon/<%=pokemon.name%>"><%= pokemon.name %></a></h2>
        <img src="<%= pokemon.sprites.front_default %>">

        <form method="POST" action="/pokemon/<%=pokemon.name%>/?_method=DELETE">
          <input hidden type="text" name="name" value="<%= pokemon.name %>">
          <button class="btn btn-primary" type="submit">Remove From Favorites</button>
        </form>

        <ul>Abilities: </ul>
        <% pokemon.abilities.forEach(item => { %>
            <li><%= item.ability.name %></li>
        <% }) %>
        <ul>Moves: </ul>
        <% pokemon.moves.forEach(item => { %>
            <li><%= item.move.name %></li>
        <% }) %>
      </div>

  </div>
  